rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read and write their own data
    match /playerProfiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /players/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Public profiles readable by any authenticated user
      match /playerProfiles/{docId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      // Blocked users - only owner
      match /blockedUsers/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // All other subcollections - owner only
      match /{subcollection}/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Allow authenticated users to read and write training sessions they own
    match /trainingSessions/{sessionId} {
      allow read, write: if request.auth != null && 
        (resource.data.firebaseUID == request.auth.uid || 
         request.auth.uid in resource.data.allowedUsers);
    }
    
    // Allow authenticated users to read and write exercises they own
    match /exercises/{exerciseId} {
      allow read, write: if request.auth != null && 
        (resource.data.firebaseUID == request.auth.uid || 
         request.auth.uid in resource.data.allowedUsers);
    }
    
    // Allow Firebase Functions to read/write all documents (using admin SDK)
    // This rule is for client access only - admin SDK bypasses these rules
    
    // Allow authenticated users to read their own ML recommendations
    match /mlRecommendations/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read their own player goals
    match /playerGoals/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read their own feedback
    match /recommendationFeedback/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read their own sync status
    match /cloudSyncStatus/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Community posts - any authenticated user can read, author can write
    match /communityPosts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      // Author can update anything; non-authors can only update like/report fields
      allow update: if request.auth != null && (
        resource.data.authorID == request.auth.uid ||
        request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['likesCount', 'likedBy', 'reportCount', 'reportedBy'])
      );
      allow delete: if request.auth != null && resource.data.authorID == request.auth.uid;

      // Comments subcollection
      match /comments/{commentId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        // Allow updating report fields only
        allow update: if request.auth != null &&
          request.resource.data.diff(resource.data).affectedKeys()
            .hasOnly(['reportCount', 'reportedBy']);
      }
    }

    // Reports collection - authenticated users can create
    match /reports/{reportId} {
      allow create: if request.auth != null;
    }

    // Default deny rule for any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}